<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Table Content -->
    <TableRow
        android:id="@+id/table_row_empacador"
        android:padding="5dp">

        <TextView
            android:id="@+id/view_icon_pause"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_baseline_pause_circle_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="3dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_pedido"
            android:hint="p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_fecha_ent"
            android:hint="0"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_hora_ent"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_empacador"
            android:hint="0"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_cliente"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_comuna"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_direccion"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:textColor = "?android:textColorPrimary"
            android:id="@+id/view_condominio"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:padding="10dp" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:id="@+id/view_edit_rv"
                android:drawableStart="@drawable/ic_edit_24"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </TableRow>
    <!--End Table Head -->

</TableLayout>
